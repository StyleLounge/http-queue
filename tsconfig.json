{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": false,
        "pretty": true,

        "noImplicitUseStrict": true
    },
    "filesGlob": [
        "*.ts",
        "*.d.ts",
        "lib/**/*.ts",
        "typings/index.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
