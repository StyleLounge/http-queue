{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "pretty": true,
        "noImplicitUseStrict": true,
        "rootDir": "./src",
        "sourceRoot": "./src",
        "outDir": "./dist"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.d.ts",
        "!node_modules/**"
    ],
    "exclude": [
        "node_modules",
        ".wercker"
    ]
}
