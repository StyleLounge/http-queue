{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "rootDir": "./src",
        "sourceRoot": "./src",
        "outDir": "./dist",
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "typeRoots": ["./node_modules/@types"],
        "noImplicitAny": true,
        "lib": [
          "es2015",
          "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
