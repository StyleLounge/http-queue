{
  "extends": [
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": true,
    "max-line-length": [
      true,
      120
    ],
    "no-console": true,
    "align": [
      true,
      "parameters"
    ],
    "arrow-parens": false,
    "quotemark": [
      true,
      "double"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": [
      false
    ],
    "no-string-literal": false,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "no-unused-variable": true,
    "arrow-return-shorthand": false
  }
}
